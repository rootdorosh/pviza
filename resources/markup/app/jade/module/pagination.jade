	ul.pagination__list
		li.pagination__item
			a.pagination__prev.disabled(href="#")
				svg: use(xlink:href="img/sprite.svg#prev")
		li.pagination__item
			a.pagination__btn.active(href="#") 1
		li.pagination__item
			a.pagination__btn(href="#") 2
		li.pagination__item
			a.pagination__btn(href="#") 3
		li.pagination__item
			a.pagination__btn(href="#") 4
		li.pagination__item ...
		li.pagination__item
			a.pagination__btn(href="#") 12
		li.pagination__item
			a.pagination__next(href="#")
				svg: use(xlink:href="img/sprite.svg#next")
